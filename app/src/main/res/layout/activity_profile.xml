<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="300sp"

                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="250sp"
                    android:orientation="vertical"
                    android:background="@color/colorBlue">
                    <ImageView
                        android:layout_width="100sp"
                        android:layout_height="100sp"
                        android:src="@drawable/profile"
                        android:layout_gravity="center"
                        android:layout_marginTop="20sp">
                    </ImageView>

                    <EditText
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nadeesha Pathiraja"
                        android:gravity="center"
                        android:textColor="@color/text"
                        android:textSize="30sp"
                        android:paddingTop="10sp">
                    </EditText>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="300sp"
                    android:layout_height="100sp"
                    android:background="@color/colorMagenta"
                    android:layout_marginTop="200sp"
                    android:layout_centerHorizontal="true"
                    >
                        <LinearLayout
                            android:layout_width="0sp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="25"
                                android:textColor="@color/text"
                                android:textSize="45sp"
                                android:gravity="center"
                                >
                            </TextView>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/orders"
                                android:textColor="@color/text"
                                android:gravity="center"
                                >
                            </TextView>
                        </LinearLayout>
                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="12"
                            android:textColor="@color/text"
                            android:textSize="45sp"
                            android:gravity="center"
                            >
                        </TextView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/ratings"
                            android:textColor="@color/text"
                            android:gravity="center"
                            >
                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="08"
                            android:textColor="@color/text"
                            android:textSize="45sp"
                            android:gravity="center"
                            >
                        </TextView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/cancel_orders"
                            android:textColor="@color/text"
                            android:gravity="center"
                            >
                        </TextView>
                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                >
                //Email
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:padding="10sp"
                    android:layout_marginTop="20sp"
                    >
                    <ImageView
                        android:layout_width="50sp"
                        android:layout_height="50sp"
                        android:src="@drawable/ic_baseline_email_24"
                        android:background="@color/light_primary"
                        android:padding="10sp"
                        >
                    </ImageView>

                    <EditText
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="pdnc@gmail.com"
                        android:textSize="20sp"
                        android:textColor="@color/accent"
                        android:gravity="left"
                        android:layout_marginLeft="20sp">

                    </EditText>
                </LinearLayout>
                //Phone
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:padding="10sp"
                    android:layout_marginTop="20sp"
                    >
                    <ImageView
                        android:layout_width="50sp"
                        android:layout_height="50sp"
                        android:src="@drawable/ic_baseline_phone_24"
                        android:background="@color/light_primary"
                        android:padding="10sp"
                        >
                    </ImageView>

                    <EditText
                        android:id="@+id/mobile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="0768352207"
                        android:textSize="20sp"
                        android:textColor="@color/accent"
                        android:gravity="left"
                        android:layout_marginLeft="20sp">

                    </EditText>
                </LinearLayout>
                //Address
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:padding="10sp"
                    android:layout_marginTop="20sp"
                    >
                    <ImageView
                        android:layout_width="50sp"
                        android:layout_height="50sp"
                        android:src="@drawable/ic_baseline_location_on_24"
                        android:background="@color/light_primary"
                        android:padding="10sp"
                        >
                    </ImageView>

                    <EditText
                        android:id="@+id/address"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="No 49, Nayadola, Mahagama"
                        android:textSize="20sp"
                        android:textColor="@color/accent"
                        android:gravity="left"
                        android:layout_marginLeft="20sp">

                    </EditText>
                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="1"
                android:layout_marginBottom="20sp">
             <Button
                    android:layout_width="0sp"
                    android:layout_height="50sp"
                    android:layout_weight="1"
                    android:text="Save"
                    android:textSize="12sp"
                    android:layout_margin="5sp"
                    android:onClick="save"
                    android:background="@color/colorBlue">

                </Button>
                <Button
                    android:layout_width="0sp"
                    android:layout_height="50sp"
                    android:layout_weight="1"
                    android:text="Clear"
                    android:textSize="12sp"
                    android:onClick="clear"
                    android:layout_margin="5sp"

                    android:background="@color/purple_200">

                </Button>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="1"
                android:layout_marginBottom="20sp">
                <Button
                    android:layout_width="0sp"
                    android:layout_height="50sp"
                    android:layout_weight="1"
                    android:text="My Note"
                    android:textSize="12sp"
                    android:layout_margin="5sp"
                    android:background="@color/colorBlue"
                    android:onClick="myNote">

                </Button>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>